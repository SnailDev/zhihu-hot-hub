e_area": {"url": "https://pic3.zhimg.com/50/v2-f32c6f0d94ec1eaf9f15444b6d29031b_b.jpg"}, "metrics_area": {"text": "72 万热度"}, "label_area": {"type": "trend", "trend": 0, "night_color": "#B7302D", "normal_color": "#F1403C"}, "link": {"url": "https://www.zhihu.com/question/444908561"}}, "attached_info": "Cj4I/YrVv8Pp97ZOEAMaCDYxMTQ3MTQxIIiMtIEGMAE4K0Axcgk0NDQ5MDg1NjF4AKoBCWJpbGxib2FyZNIBAA=="}], "paging": {"is_end": true, "next": "", "previous": ""}, "fresh_text": "热榜已更新"}